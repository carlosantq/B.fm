// Usuarios e bibliotecas de artistas, albuns e musicas ==========================================================
 cadastrar_artista_biblioteca(aa, uu) =
 BEGIN
 	biblioteca_artistas_usuario_i(aa, uu) := TRUE
 END;

 remover_artista_biblioteca(aa, uu) =
 BEGIN
 	biblioteca_artistas_usuario_i(aa, uu) := FALSE
 END;
 
 cadastrar_album_biblioteca(aa, uu) =
 BEGIN
 	biblioteca_albuns_usuario_i(aa, uu) := TRUE
 END;

 remover_album_biblioteca(aa, uu) =
 BEGIN
 	biblioteca_albuns_usuario_i(aa, uu) := FALSE
 END;

 cadastrar_musica_biblioteca(mm, uu) =
 BEGIN
 	biblioteca_musicas_usuario_i(mm, uu) := TRUE
 END;

 remover_musica_biblioteca(mm, uu) =
 BEGIN
 	biblioteca_musicas_usuario_i(mm, uu) := FALSE //||
