IMPLEMENTATION GerenciadorPlaylist_i
REFINES GerenciadorPlaylist

SEES
 Playlist_Ctx

CONCRETE_VARIABLES
	playlists_i

INVARIANT
	playlists_i : PLAYLIST --> BOOL &
	dom(playlists_i |> {TRUE}) = playlists

INITIALISATION
	playlists_i := (0..100) * {FALSE}

OPERATIONS

 cadastrar_playlist(pp) = 
	playlists_i(pp) := TRUE;

 remover_playlist(pp) = 
 	playlists_i(pp) := FALSE

 END