 cadastrar_obsessao_do_momento(uu, mm) =
 BEGIN
	obsessao_do_momento_i(uu) := mm
 END;

 remover_obsessao_do_momento(uu) =
 BEGIN
	obsessao_do_momento_i(uu) := 0
 END;
 
 rr <-- consultar_obsessao_do_momento(uu) =
 BEGIN
	rr := obsessao_do_momento_i(uu)
 END
